{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program with kdtree",
            "program": "${workspaceRoot}/app.js",
            "args": [
                "stations.csv"
            ],
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program without kdtree",
            "program": "${workspaceRoot}/app.js",
            "args": [
                "stations.csv",
                "-kd"
            ],
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program help",
            "program": "${workspaceRoot}/app.js",
            "args": [
                "-help"
            ],
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program without args",
            "program": "${workspaceRoot}/app.js",

            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceRoot}/test"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}